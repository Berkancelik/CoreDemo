@model UserUpdateViewModel
@{
    ViewData["Title"] = "WriterEditProfile";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}


<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yazar Profil Bilgileri Düzenleme</h4>
            <br />

            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label for="exampleInputName1">İsim</label>
                    <input type="text" asp-for="@Model.NameSurname" class="form-control" />
                    @Html.ValidationMessageFor(x => x.NameSurname, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label for="exampleInputEmail3">Kullanıcı Adı </label>
                    <input type="text" asp-for="@Model.UserName" class="form-control" />
                    @Html.ValidationMessageFor(x => x.UserName, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label for="exampleInputEmail3">Mail Adresi </label>
                    <input type="text" asp-for="@Model.Mail" class="form-control" />
                    @Html.ValidationMessageFor(x => x.Mail, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label for="exampleInputEmail3">Yeni Şifreniz </label>
                    <input type="text" asp-for="@Model.Password" class="form-control" />
                    @Html.ValidationMessageFor(x => x.Password, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label for="exampleInputEmail3">Resim Yolu </label>
                    <input type="text" asp-for="@Model.ImageUrl" class="form-control" />
                    @Html.ValidationMessageFor(x => x.ImageUrl, "", new { @class = "text-danger" })
                </div>


                <button type="submit" class="btn btn-gradient-primary mr-2">Gönder</button>
                <button class="btn btn-light">İptal</button>
            </form>
        </div>
    </div>
</div>

